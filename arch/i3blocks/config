[global]
markup=none  # 关闭Pango格式，避免冲突
interval=5
output_format=json  # 直接输出原始JSON数组

[media]
command=$HOME/.config/i3blocks/scripts/media
interval=1

# 自定义模块
[cpu_usage]
command=~/.config/i3blocks/scripts/cpu_usage
interval=5

[gpu_usage]
command=~/.config/i3blocks/scripts/gpu_usage
interval=5

[memory]
command=~/.config/i3blocks/scripts/memory
interval=5

[disk]
command=~/.config/i3blocks/scripts/disk
interval=60

[battery]
command=~/.config/i3blocks/scripts/battery
interval=5

[volume]
command=~/.config/i3blocks/scripts/volume
signal=10
interval=60

[time]
command=~/.config/i3blocks/scripts/time
interval=5

